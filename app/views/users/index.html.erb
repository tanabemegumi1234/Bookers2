<div class="container px-5 px-sm-0">
 <% if @book.errors.any? %>
    <h3 class="error"><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="error error_messages"><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  
  <div class="row">
    <div class="col-md-3">
      <h2>User Info</h2>
      <%= image_tag @user.get_profile_image(100,100)%>
      <table class="t">
      <tr>
        <th>name</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= @user.introduction %></td>
      </tr>
  
    </table>
    <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
    <h2> New book</h2>

<%= form_for(@book) do |f| %>

	<h4> Title</h4>
	<%= f.text_field :title %>

	<h4> Opinion</h4>
	<%= f.text_area :body %>

	<input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">

<% end %>
    
  </div>  
  

    <div class="col-md-8 offset-md-1">
      
      
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
          <td>
            <%= image_tag user.get_profile_image(100,100)%>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to"Show", user_path(user.id) %>
          </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
